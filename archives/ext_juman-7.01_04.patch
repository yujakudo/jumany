+			pstream->buff[1] = pstream->buff[0];
+		} else if(NULL==pbuffs[1]) {
+			pstream->buff[0] = pstream->buff[1] = pbuffs[0];
+		} else {
+			pstream->buff[0] = pstream->buff[1] = pbuffs[1];
